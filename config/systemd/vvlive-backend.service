[Unit]
Description=VVLIVE Backend Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/VVLIVE/backend
Environment="PATH=/home/ubuntu/VVLIVE/backend/venv/bin"
ExecStart=/home/ubuntu/VVLIVE/backend/venv/bin/python -m uvicorn app.main:app --host 0.0.0.0 --port 8000
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target